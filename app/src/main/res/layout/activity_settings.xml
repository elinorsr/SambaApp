<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pink_bow_background"
    android:padding="18dp"
    tools:context=".user.SettingsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:background="@android:color/transparent"
            android:contentDescription="@string/back"
            android:layout_marginEnd="8dp"
            app:tint="#000000" />

        <!-- שורת כותרת עם רקע לבן עגול -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header_background"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_profile"
                android:contentDescription="Profile icon"
                app:tint="#000000" />

            <TextView
                android:id="@+id/text_greeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello user!"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginStart="8dp" />


            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btn_settings"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_settings"
                android:contentDescription="Settings"
                android:background="@android:color/transparent"
                app:tint="#000000" />
        </LinearLayout>

        <!-- כותרת SETTINGS -->
        <TextView
            android:text="SETTINGS"
            android:textSize="20sp"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Level -->
        <TextView
            style="@style/LabelStyle"
            android:text="Level"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinner_level"
            android:background="@drawable/input_field_background"
            android:contentDescription="Choose your level"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <!-- Phone number -->
        <TextView
            style="@style/LabelStyle"
            android:text="Phone number"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit_phone"
            android:hint="Phone number"
            android:inputType="phone"
            android:background="@drawable/input_field_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
        <EditText
            android:id="@+id/edit_name"
            android:hint="Your name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/input_field_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- Age -->
        <TextView
            style="@style/LabelStyle"
            android:text="Age"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit_age"
            android:hint="Age"
            android:inputType="number"
            android:background="@drawable/input_field_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <!-- Gender -->
        <TextView
            style="@style/LabelStyle"
            android:text="Gender"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinner_gender"
            android:background="@drawable/input_field_background"
            android:contentDescription="Select your gender"
            android:layout_marginBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <!-- Upload photo -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="48dp">

            <TextView
                android:id="@+id/text_upload"
                style="@style/LabelStyle"
                android:text="Upload photo"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true" />


            <ImageButton
                android:id="@+id/btn_upload"
                android:src="@drawable/ic_photo"
                android:contentDescription="Upload photo"
                android:background="@android:color/transparent"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:tint="@null" />
        </LinearLayout>

        <!-- Continue button -->
        <Button
            android:id="@+id/btn_continue_settings"
            android:text="CONTINUE"
            android:textStyle="italic"
            android:textAllCaps="false"
            android:textColor="#E91E63"
            android:textSize="18sp"
            android:background="@drawable/pink_border_button"

            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginBottom="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
