<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- וידאו פלייר -->
    <VideoView
        android:id="@+id/video_preview"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp" />

    <!-- כפתור לבחירת סרטון -->
    <Button
        android:id="@+id/btn_pick_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="בחר סרטון"
        app:layout_constraintTop_toBottomOf="@id/video_preview"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp" />

    <!-- כפתור הוספה -->
    <Button
        android:id="@+id/btn_add_lesson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add lesson"
        app:layout_constraintTop_toBottomOf="@id/btn_pick_video"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp" />

    <!-- רשימת שיעורים -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_lessons_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFEB3B"
        android:clipToPadding="false"
        android:paddingBottom="120dp"
        app:layout_constraintTop_toBottomOf="@id/btn_add_lesson"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
